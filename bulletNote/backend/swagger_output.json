{
  "swagger": "2.0",
  "info": {
    "title": "Bullet Note API documentation",
    "version": "1.0.0",
    "description": "Bullet Note backend interface documentation"
  },
  "host": "localhost:3000",
  "servers": [
    {
      "url": "http://localhost:5000",
